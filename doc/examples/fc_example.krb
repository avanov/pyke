direct_son_father
    foreach
        family.son_of($son, $father)
    assert
        family.son_father($son, $father, ())

grand_son_father
    foreach
        family.son_father($grand_son, $father, ())
        family.son_father($father, $grand_father, ())
    assert
        family.son_father($grand_son, $grand_father, (grand))

great_grand_son_father
    foreach
        family.son_father($gg_child, $parent, ())
        family.son_father($parent, $gg_parent, ($prefix1, *$rest_prefixes))
    assert
        family.son_father($gg_child, $gg_parent,
                            (great, $prefix1, *$rest_prefixes))

